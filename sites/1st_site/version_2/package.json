{
  "name": "clash-royale-website",
  "version": "2.0.0",
  "description": "Modern Clash Royale website built with React",
  "private": true,
  "type": "module",
  "homepage": "https://legendacr.github.io/Work/1st_site/version_2",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:deploy": "VITE_BASE_PATH=/Work/1st_site/version_2/ vite build",
    "preview": "vite preview",
    "predeploy": "npm run build:deploy && npm run prepare-deploy",
    "prepare-deploy": "node scripts/prepare-deploy.js",
    "deploy": "gh-pages -d deploy-dist",
    "start": "node server.js",
    "start:prod": "PORT=3000 node server.js",
    "kill:3000": "lsof -ti:3000 | xargs kill -9 2>/dev/null || echo 'No process on port 3000'"
  },
  "dependencies": {
    "express": "^4.20.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.20.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.2.1",
    "gh-pages": "^6.3.0",
    "vite": "^7.3.1"
  },
  "author": "Илья Legenda",
  "license": "ISC"
}
